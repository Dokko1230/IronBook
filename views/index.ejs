<div class="legend"> (110 / 3) ^ 2 = 110 kg for 3 reps, for 2 sets
</div>

<div class="container main">
  <div class="row">
    <div class="col-md-12">
      <form role="form" method="post" action="/lift">
        <div class="form-group">
          <label for="name">Name of workout</label>
          <input class="form-control" placeholder="Powercleans, squats, etc.." name='name' type="text">
        </div>
        <div class="form-group">
          <label for="weight">Weight</label>
          <input class="form-control" placeholder="15" name='weight' type="text">
        </div>
        <div class="form-group">
          <label for="reps">Reps</label>
          <input class="form-control" placeholder="8" name='reps' type="text">
        </div>
        <div class="form-group">
          <label for="name">Sets</label>
          <input class="form-control" placeholder="3" name='sets' type="text">
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
      </form>
    </div>
  </div>
</div>

<div class="container lifts">
</div>

<script id='liftTemplate' type='text/x-handlebars-template'>
    <div>
      {{ name }} 
    </div>
    <div>
      {{ weight }} kgs for 
    </div>
    <div>
      {{ reps }} Reps and for
    </div>
    <div>
      {{ sets }} Sets
    </div>
    <button class="btn btn-primary">PR!</button>
</script>

